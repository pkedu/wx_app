<view class="showmap">
  <map class="maps" id="map" longitude="114.260066" latitude="30.631482" scale="17" controls="{{controls}}" bindcontroltap="controltap" markers="{{markers}}" bindmarkertap="markertap" polyline="{{polyline}}" bindregionchange="regionchange" show-location></map>
</view>

<view class="grids">
  <navigator class="item" wx:for="{{categories}}" wx:key="id" url="/pages/list/list?cat={{item.id}}">
    <image src="{{item.icon}}"/>
    <text>{{item.name}}</text>
  </navigator>
</view>

<view class="links">
  <navigator url="/pages/list/list?type=recommend">
    <image src="/assets/link-01.png"/>
  </navigator>
  <navigator url="/pages/forum/forum">
    <image src="/assets/link-02.png"/>
  </navigator>
</view>